    /* Hero (same triangular style) */
    .hero {
      position: relative;
      background: url('/servicea.jpg') no-repeat center center/cover;
      clip-path: polygon(0 0, 100% 0, 100% 82%, 0 100%);
      height: 80vh;
    }
    .hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(12, 34, 27, 0.78);
    }
    .hero-content {
      position: relative;
      z-index: 10;
    }

    .btn-primary {
      background: var(--dg-300);
      color: #fff;
      font-weight: 700;
      border-radius: .5rem;
      padding: .75rem 1.5rem;
      display: inline-block;
      transition: transform .15s ease, filter .15s ease, background .15s ease;
    }
    .btn-primary:hover {
      background: var(--dg-400);
      filter: brightness(1.05);
      transform: translateY(-2px);
    }

    .tick-item::before {
      content:"✔";
      margin-right:.5rem;
      font-weight:700;
      color: var(--dg-200);
    }

    .slant-top {
      position: relative;
    }
    .slant-top::before {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: -80px;
      height: 80px;
      background: var(--dg-900);
      clip-path: polygon(0 100%,100% 0,100% 100%);
    }

    @keyframes breatheZoom {
      0% { transform: scale(0.97); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    .animate-breathe {
      animation: breatheZoom 0.8s ease-out both;
    }

    @media (max-width: 768px) {
      .hero {
        background: url('/servicea.jpg') no-repeat center center/cover;
        height: 70vh;
      }
    }
  </style>

