    :root {
      --dg-900:#0b1f19;
      --dg-800:#0f2a22;
      --dg-700:#14362b;
      --dg-600:#184233;
      --dg-500:#1c4e3c;
      --dg-400:#1f5b45;
      --dg-300:#2a7a5a;
      --dg-200:#9ed1b7;
