  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

  <style>
    :root {
      --dg-900:#0b1f19;
      --dg-800:#0f2a22;
      --dg-700:#14362b;
      --dg-600:#184233;
      --dg-500:#1c4e3c;
      --dg-400:#1f5b45;
      --dg-300:#2a7a5a;
      --dg-200:#9ed1b7;
      --dg-100:#e6f3ed;
    }

    body {
      background: white;
      color: black;
      font-family: "Inter", sans-serif;
    }

    .dropdown-menu { display: none; }
    .dropdown:hover .dropdown-menu,
    .dropdown:focus-within .dropdown-menu,
    .dropdown-menu:hover { display: block; }

    @keyframes breatheZoom {
      0% { transform: scale(0.97); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    .animate-breathe {
      animation: breatheZoom 0.8s ease-out both;
    }

    .btn-primary {
      background: var(--dg-300);
      color: #fff;
      font-weight: 700;
      border-radius: .5rem;
      padding: .75rem 1.5rem;
      display: inline-block;
      transition: transform .15s ease, filter .15s ease, background .15s ease;
    }
    .btn-primary:hover {
      background: var(--dg-400);
      filter: brightness(1.05);
      transform: translateY(-2px);
    }
  </style>

  <!-- Umami analytics -->
  <script defer src="https://cloud.umami.is/script.js" data-website-id="045fc1e4-9f56-44f2-992e-98f5fb7717a5"></script>
