<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8" />
  <title>Bokning | GenAition</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Fyll i dina uppgifter för att slutföra din anmälan till GenAitions workshop och gå vidare till betalning." />
  <link rel="icon" href="/favicon.ico" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

  <style>
    :root {
      --dg-900:#0b1f19;
      --dg-800:#0f2a22;
      --dg-700:#14362b;
      --dg-600:#184233;
      --dg-500:#1c4e3c;
      --dg-400:#1f5b45;
      --dg-300:#2a7a5a;
      --dg-200:#9ed1b7;
      --dg-100:#e6f3ed;
    }

    body {
      background: white;
      color: black;
      font-family: "Inter", sans-serif;
    }

    .dropdown-menu { display: none; }
    .dropdown:hover .dropdown-menu,
    .dropdown:focus-within .dropdown-menu,
    .dropdown-menu:hover { display: block; }

    @keyframes breatheZoom {
      0% { transform: scale(0.97); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    .animate-breathe {
      animation: breatheZoom 0.8s ease-out both;
    }

    .btn-primary {
      background: var(--dg-300);
      color: #fff;
      font-weight: 700;
      border-radius: .5rem;
      padding: .75rem 1.5rem;
      display: inline-block;
      transition: transform .15s ease, filter .15s ease, background .15s ease;
    }
    .btn-primary:hover {
      background: var(--dg-400);
      filter: brightness(1.05);
      transform: translateY(-2px);
    }
  </style>

  <!-- Umami analytics -->
  <script defer src="https://cloud.umami.is/script.js" data-website-id="045fc1e4-9f56-44f2-992e-98f5fb7717a5"></script>
</head>

<body class="font-sans bg-white text-black">

  <!-- HEADER -->
  <header class="w-full flex items-center justify-between px-6 py-4" style="background:var(--dg-900);">
    <!-- Logo -->
    <a href="/index-sv.html" class="flex items-center">
      <img src="/android-chrome-512x512.png" alt="GenAition Logo" class="h-10 w-10 rounded-full">
    </a>

    <!-- Language Dropdown -->
    <div class="relative dropdown">
      <button class="flex items-center space-x-2 focus:outline-none text-white">
        <img src="/swedish.png" alt="Swedish" class="h-5 w-5">
        <span>SV</span>
        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </button>
      <div class="dropdown-menu absolute right-0 mt-2 w-36 bg-white text-black rounded-lg shadow-lg z-30">
        <a href="/before-checkout.html" class="flex items-center px-3 py-2 hover:bg-gray-100">
          <img src="/english.png" class="h-4 w-4 mr-2" alt="English flag"> English
        </a>
        <a href="/before-checkout-sv.html" class="flex items-center px-3 py-2 hover:bg-gray-100">
          <img src="/swedish.png" class="h-4 w-4 mr-2" alt="Swedish flag"> Svenska
        </a>
      </div>
    </div>
  </header>

  <!-- HERO / INTRO -->
  <section class="py-20" style="background:var(--dg-900); color:#e9f2ee;">
    <div class="max-w-4xl mx-auto px-6 text-center animate-breathe">
      <p class="text-xs uppercase tracking-widest mb-2" style="color:#FFC107;">Steg 1 av 2</p>
      <h2 class="text-3xl md:text-4xl font-extrabold mb-6">Workshopanmälan</h2>
      <p class="text-green-100 mb-10">Fyll i formuläret nedan för att fortsätta till betalning.</p>
    </div>
  </section>

  <!-- FORM -->
  <main class="max-w-2xl mx-auto px-6 py-16 -mt-20 relative z-10 animate-breathe">
    <form id="booking-form" class="space-y-6 bg-white border border-gray-200 p-8 rounded-xl shadow-lg">
      <div>
        <label class="block font-medium mb-1 text-gray-800">Förnamn</label>
        <input type="text" name="name" class="w-full border border-gray-300 rounded-lg p-2" placeholder="Ditt förnamn" required />
      </div>

      <div>
        <label class="block font-medium mb-1 text-gray-800">Efternamn</label>
        <input type="text" name="surname" class="w-full border border-gray-300 rounded-lg p-2" placeholder="Ditt efternamn" required />
      </div>

      <div>
        <label class="block font-medium mb-1 text-gray-800">Telefonnummer</label>
        <input type="tel" name="phone" class="w-full border border-gray-300 rounded-lg p-2" placeholder="+46..." required />
      </div>

      <div>
        <label class="block font-medium mb-1 text-gray-800">E-postadress</label>
        <input type="email" name="email" class="w-full border border-gray-300 rounded-lg p-2" placeholder="din@email.se" required />
      </div>

      <div>
        <label class="block font-medium mb-1 text-gray-800">Bakgrund</label>
        <select name="background" class="w-full border border-gray-300 rounded-lg p-2" required>
          <option value="" disabled selected>Välj din bakgrund</option>
          <option>Tech</option>
          <option>Icke-Tech</option>
        </select>
      </div>

      <div>
        <label class="block font-medium mb-1 text-gray-800">Antal biljetter</label>
        <div class="flex items-center space-x-4 mb-2">
          <button type="button" id="decrease" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">-</button>
          <input type="number" id="ticketCount" name="tickets" value="1" min="1" max="6"
                 class="w-16 text-center border border-gray-300 rounded p-2" readonly />
          <button type="button" id="increase" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">+</button>
        </div>

        <div id="ticketTotal" class="mt-4 flex items-center gap-3 text-sm">
          <span class="text-black">Totalt:</span>
          <span id="discountedPrice" class="text-black font-bold">SEK 595</span>
          <span id="originalPrice" class="text-xs text-gray-400 line-through">SEK 895</span>
          <span id="discountBadge" class="bg-red-100 text-red-600 text-xs font-semibold px-2 py-0.5 rounded">-38%</span>
        </div>
      </div>

      <button type="button" id="submitBtn" class="btn-primary w-full text-center shadow-md">Gå vidare till betalning →</button>
    </form>
  </main>

  <!-- FOOTER -->
  <footer class="bg-black text-white pt-12 pb-6 mt-16">
    <div class="max-w-4xl mx-auto px-4 grid grid-cols-2 text-sm">
      <div class="flex flex-col space-y-2 text-left">
        <a href="/index-sv.html" class="hover:text-green-400">Hem</a>
        <a href="/learn-more-sv.html" class="hover:text-green-400">Om oss</a>
        <a href="/index-sv.html#workshops" class="hover:text-green-400">Event</a>
        <a href="/index-sv.html#services" class="hover:text-green-400">Tjänster</a>
        <a href="/index-sv.html#contact" class="hover:text-green-400">Kontakt</a>
      </div>
      <div class="flex flex-col text-right">
        <p class="mb-1 font-semibold">GenAition</p>
        <p>Konstgjutarvägen 4<br>121 44 Stockholm<br>Sverige</p>
        <p class="mt-2">info@genaition.org</p>
        <p>+46 762 608 848</p>
      </div>
    </div>

    <div class="flex flex-col items-center mt-10 space-y-4">
      <img src="/android-chrome-512x512.png" alt="GenAition Logo" class="h-14 w-14" />
      <div class="flex space-x-4">
        <a href="https://www.linkedin.com/company/genaition-io/" target="_blank">
          <img src="/linkedin.png" class="h-6 w-6 hover:opacity-80" />
        </a>
        <a href="https://www.facebook.com/profile.php?id=61573993137142" target="_blank">
          <img src="/facebook.png" class="h-6 w-6 hover:opacity-80" />
        </a>
        <a href="https://www.instagram.com/genaition.io/" target="_blank">
          <img src="/instagram.png" class="h-6 w-6 hover:opacity-80" />
        </a>
      </div>
    </div>

    <p class="text-center text-gray-400 text-xs mt-6">&copy; 2025 GenAition. Alla rättigheter förbehållna.</p>
  </footer>

  <!-- Script -->
  <script>
    const dec = document.getElementById('decrease');
    const inc = document.getElementById('increase');
    const count = document.getElementById('ticketCount');
    const discounted = document.getElementById('discountedPrice');
    const original = document.getElementById('originalPrice');
    const badge = document.getElementById('discountBadge');
    const pricePer = 595, originalPer = 895;

    function updateTotal() {
      const val = parseInt(count.value);
      const newDisc = val * pricePer;
      const newOrig = val * originalPer;
      const discount = Math.round(((newOrig - newDisc) / newOrig) * 100);
      discounted.textContent = `SEK ${newDisc}`;
      original.textContent = `SEK ${newOrig}`;
      badge.textContent = `-${discount}%`;
    }
    dec.addEventListener('click', () => { if (count.value > 1) { count.value--; updateTotal(); }});
    inc.addEventListener('click', () => { if (count.value < 6) { count.value++; updateTotal(); }});
    updateTotal();

    document.getElementById("submitBtn").addEventListener("click", function () {
      const form = document.getElementById("booking-form");
      if (!form.checkValidity()) { form.reportValidity(); return; }

      const formData = new FormData(form);
      const tickets = parseInt(count.value);

      try {
        const params = new URLSearchParams();
        formData.forEach((v, k) => params.append(k, v));
        navigator.sendBeacon("https://nariman09.app.n8n.cloud/webhook/ca321f00-1343-4b79-9e64-482fb94132d6",
          new Blob([params.toString()], { type: 'application/x-www-form-urlencoded' }));
      } catch (err) { console.warn("Webhook failed:", err); }

      const stripeLinks = {
        1: "https://buy.stripe.com/dRm9AT0BR5HT4t6ajD8AE0b",
        2: "https://buy.stripe.com/fZudR998nc6h9NqajD8AE0c",
        3: "https://buy.stripe.com/5kQ28rckz6LX0cQfDX8AE0d",
        4: "https://buy.stripe.com/4gM28r1FVb2dcZC9fz8AE0e",
        5: "https://buy.stripe.com/5kQeVd0BR0nz6BecrL8AE0f",
        6: "https://buy.stripe.com/7sYeVd84jb2dgbO77r8AE0g"
      };
      window.location.href = stripeLinks[tickets] || stripeLinks[1];
    });
  </script>
</body>
</html>
