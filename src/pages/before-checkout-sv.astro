  <!-- Bokningsformulär -->
  <main class="max-w-2xl mx-auto px-4 sm:px-6 py-16 text-black animate-breathe">
    <h1 class="text-3xl font-extrabold text-center mb-10" style="color:var(--dg-700);">Faktureringsinformation</h1>

    <form id="booking-form" class="space-y-6 bg-gray-100 p-6 sm:p-8 rounded-lg shadow-md">
      <div>
        <label class="block font-medium mb-1">Förnamn</label>
        <input type="text" name="name" class="w-full border border-gray-300 rounded p-2" placeholder="Ditt förnamn" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Efternamn</label>
        <input type="text" name="surname" class="w-full border border-gray-300 rounded p-2" placeholder="Ditt efternamn" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Telefon</label>
        <input type="tel" name="phone" class="w-full border border-gray-300 rounded p-2" placeholder="+46..." required />
      </div>

      <div>
        <label class="block font-medium mb-1">E-post</label>
        <input type="email" name="email" class="w-full border border-gray-300 rounded p-2" placeholder="din@email.se" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Bakgrund</label>
        <select name="background" class="w-full border border-gray-300 rounded p-2" required>
          <option value="" disabled selected>Välj din bakgrund</option>
          <option>Tech</option>
          <option>Ej-Tech</option>
        </select>
      </div>

      <div>
        <label class="block font-medium mb-1">Antal biljetter</label>
        <div class="flex items-center space-x-4 mb-2">
          <button type="button" id="decrease" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">-</button>
          <input type="number" id="ticketCount" name="tickets" value="1" min="1" max="6"
                 class="w-16 text-center border border-gray-300 rounded p-2" readonly />
          <button type="button" id="increase" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">+</button>
        </div>
        <div id="ticketTotal" class="mt-4 flex items-center gap-3 text-sm">
          <span class="text-black">Totalt:</span>
          <span id="discountedPrice" class="text-black font-bold">SEK 595</span>
          <span id="originalPrice" class="text-xs text-gray-400 line-through">SEK 895</span>
          <span id="discountBadge" class="bg-red-100 text-red-600 text-xs font-semibold px-2 py-0.5 rounded">-38%</span>
        </div>
      </div>

      <button type="button" id="submitBtn" class="btn-primary w-full text-center">Gå vidare till betalning →</button>
    </form>
  </main>

