        <button id="reject-cookies"
                class="bg-gray-200 text-black px-5 py-1.5 rounded-md hover:bg-gray-300 text-sm font-medium">Deny</button>
        <button id="accept-cookies"
                class="bg-green-500 hover:bg-green-600 text-white font-semibold px-5 py-1.5 rounded-md text-sm">Accept</button>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Mobile menu
    document.getElementById('menu-toggle')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });

    // Ticket counter + totals
    const decreaseBtn = document.getElementById('decrease');
    const increaseBtn = document.getElementById('increase');
    const ticketCount = document.getElementById('ticketCount');
    const pricePerTicket = 595;
    const originalPerTicket = 895;

    function updateTotal() {
      const count = parseInt(ticketCount.value);
      const discountedTotal = count * pricePerTicket;
      const originalTotal = count * originalPerTicket;
      const discountPercentage = Math.round(((originalTotal - discountedTotal) / originalTotal) * 100);
      document.getElementById('discountedPrice').textContent = `SEK ${discountedTotal}`;
      document.getElementById('originalPrice').textContent = `SEK ${originalTotal}`;
      document.getElementById('discountBadge').textContent = `-${discountPercentage}%`;
    }
    decreaseBtn.addEventListener('click', () => {
      let value = parseInt(ticketCount.value);
      if (value > 1) { ticketCount.value = value - 1; updateTotal(); }
    });
    increaseBtn.addEventListener('click', () => {
      let value = parseInt(ticketCount.value);
      if (value < 6) { ticketCount.value = value + 1; updateTotal(); }
    });
    updateTotal();

    // ===== Cookie Consent + Meta Pixel (gated) =====
    (function () {
      const banner = document.getElementById("cookie-banner");
      const overlay = document.getElementById("overlay");
      const acceptBtn = document.getElementById("accept-cookies");
      const rejectBtn = document.getElementById("reject-cookies");

      function showBanner() { banner.style.display = 'block'; overlay.classList.remove('hidden'); }
      function hideBanner() { banner.style.display = 'none'; overlay.classList.add('hidden'); }

      // Load Meta Pixel
      function loadFBQ() {
        if (window.fbq) return;
        !function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;
        n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)}
        (window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');

        fbq('init', '1507001663644263'); // Your Pixel ID
        fbq('track', 'PageView');
      }

      // Buttons
      acceptBtn?.addEventListener('click', () => {
        localStorage.setItem('cookieConsent', 'accepted');
        loadFBQ();
        hideBanner();
      });
      rejectBtn?.addEventListener('click', () => {
        localStorage.setItem('cookieConsent', 'rejected');
        hideBanner();
      });

      // On load
      const consent = localStorage.getItem('cookieConsent');
      if (consent === 'accepted') {
        loadFBQ();
      } else if (!consent) {
        // show banner after small delay
        setTimeout(showBanner, 1200);
      }

      // Save intended purchase for success page
      function saveLastPurchase({ value, currency, quantity }) {
        try {
          localStorage.setItem('lastPurchase', JSON.stringify({ value, currency, quantity, ts: Date.now() }));
        } catch (e) {}
      }

      // Submit and redirect to Stripe
      document.getElementById("submitBtn").addEventListener("click", async function () {
        const form = document.getElementById("booking-form");
        if (!form.checkValidity()) { form.reportValidity(); return; }

        const formData = new FormData(form);
        const tickets = parseInt(ticketCount.value, 10);
        const totalValue = tickets * pricePerTicket;

        // Save for success page
        saveLastPurchase({ value: totalValue, currency: 'SEK', quantity: tickets });

        // Track InitiateCheckout (if consent granted)
        if (localStorage.getItem('cookieConsent') === 'accepted' && window.fbq) {
          try {
            fbq('track', 'InitiateCheckout', { num_items: tickets, value: totalValue, currency: 'SEK' });
          } catch (e) {}
        }

        try {
          // Send data to n8n webhook
          await fetch("https://nariman09.app.n8n.cloud/webhook/ca321f00-1343-4b79-9e64-482fb94132d6", {
            method: "POST", body: formData
          });

          // Redirect to Stripe based on quantity
          const stripeLinks = {
            1: "https://buy.stripe.com/dRm9AT0BR5HT4t6ajD8AE0b",
            2: "https://buy.stripe.com/fZudR998nc6h9NqajD8AE0c",
            3: "https://buy.stripe.com/5kQ28rckz6LX0cQfDX8AE0d",
            4: "https://buy.stripe.com/4gM28r1FVb2dcZC9fz8AE0e",
            5: "https://buy.stripe.com/5kQeVd0BR0nz6BecrL8AE0f",
            6: "https://buy.stripe.com/7sYeVd84jb2dgbO77r8AE0g"
          };
          window.location.href = stripeLinks[tickets] || stripeLinks[1];
        } catch (err) {
          alert("Submission failed. Please try again.");
          console.error(err);
        }
      });
    })();
  </script>
