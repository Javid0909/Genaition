  <!-- Booking Form -->
  <main class="max-w-2xl mx-auto px-4 sm:px-6 py-16 text-black scroll-animate">
    <h1 class="text-2xl sm:text-3xl font-bold text-center mb-10">Billing information:</h1>

    <form id="booking-form" class="space-y-6 bg-gray-100 p-6 sm:p-8 rounded-lg shadow-md">
      <div>
        <label class="block font-medium mb-1">Name</label>
        <input type="text" name="name" class="w-full border border-gray-300 rounded p-2" placeholder="Your name" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Surname</label>
        <input type="text" name="surname" class="w-full border border-gray-300 rounded p-2" placeholder="Your surname" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Phone</label>
        <input type="tel" name="phone" class="w-full border border-gray-300 rounded p-2" placeholder="+46..." required />
      </div>

      <div>
        <label class="block font-medium mb-1">Email</label>
        <input type="email" name="email" class="w-full border border-gray-300 rounded p-2" placeholder="your@email.com" required />
      </div>

      <div>
        <label class="block font-medium mb-1">Background</label>
        <select name="background" class="w-full border border-gray-300 rounded p-2" required>
          <option value="" disabled selected>Select your background</option>
          <option>Tech</option>
          <option>Non-Tech</option>
        </select>
      </div>

      <!-- Number of Tickets -->
      <div>
        <label class="block font-medium mb-1">Number of Tickets</label>
        <div class="flex items-center space-x-4 mb-2">
          <button type="button" id="decrease" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">-</button>
          <input type="number" id="ticketCount" name="tickets" value="1" min="1" max="6"
                 class="w-16 text-center border border-gray-300 rounded p-2" readonly />
          <button type="button" id="increase" class="bg-gray-200 px-3 py-1 rounded text-xl font-bold">+</button>
        </div>

        <div id="ticketTotal" class="mt-4 flex items-center gap-3 text-sm">
          <span class="text-black">Total:</span>
          <span id="discountedPrice" class="text-black font-bold">SEK 595</span>
          <span id="originalPrice" class="text-xs text-gray-400 line-through">SEK 895</span>
          <span id="discountBadge" class="bg-red-100 text-red-600 text-xs font-semibold px-2 py-0.5 rounded">-38%</span>
        </div>
      </div>

      <button type="button" id="submitBtn" class="w-full bg-green-500 hover:bg-green-600 text-black font-bold py-3 rounded">
        Continue to checkout →
      </button>
    </form>
