  <!-- Scripts -->
<script>
  // Mobile menu
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    document.getElementById('mobile-menu')?.classList.toggle('hidden');
  });

  // Ticket counter + totals
  const decreaseBtn = document.getElementById('decrease');
  const increaseBtn = document.getElementById('increase');
  const ticketCount = document.getElementById('ticketCount');
  const pricePerTicket = 595;
  const originalPerTicket = 895;

  function updateTotal() {
    const count = parseInt(ticketCount.value);
    const discountedTotal = count * pricePerTicket;
    const originalTotal = count * originalPerTicket;
    const discountPercentage = Math.round(((originalTotal - discountedTotal) / originalTotal) * 100);
    document.getElementById('discountedPrice').textContent = `SEK ${discountedTotal}`;
    document.getElementById('originalPrice').textContent = `SEK ${originalTotal}`;
    document.getElementById('discountBadge').textContent = `-${discountPercentage}%`;
  }
  decreaseBtn.addEventListener('click', () => {
    let value = parseInt(ticketCount.value);
    if (value > 1) { ticketCount.value = value - 1; updateTotal(); }
  });
  increaseBtn.addEventListener('click', () => {
    let value = parseInt(ticketCount.value);
    if (value < 6) { ticketCount.value = value + 1; updateTotal(); }
  });
  updateTotal();

  // Stripe redirect + webhook submit
  document.getElementById("submitBtn").addEventListener("click", async function () {
    const form = document.getElementById("booking-form");
    if (!form.checkValidity()) { form.reportValidity(); return; }

    const formData = new FormData(form);
    const tickets = parseInt(ticketCount.value);

    try {
      // Send booking data to n8n webhook
      await fetch("https://nariman09.app.n8n.cloud/webhook/ca321f00-1343-4b79-9e64-482fb94132d6", {
        method: "POST",
        body: formData
      });

      // Stripe links by ticket count
      const stripeLinks = {
        1: "https://buy.stripe.com/dRm9AT0BR5HT4t6ajD8AE0b",
        2: "https://buy.stripe.com/fZudR998nc6h9NqajD8AE0c",
        3: "https://buy.stripe.com/5kQ28rckz6LX0cQfDX8AE0d",
        4: "https://buy.stripe.com/4gM28r1FVb2dcZC9fz8AE0e",
        5: "https://buy.stripe.com/5kQeVd0BR0nz6BecrL8AE0f",
        6: "https://buy.stripe.com/7sYeVd84jb2dgbO77r8AE0g"
      };

      const stripeUrl = stripeLinks[tickets] || stripeLinks[1];
      window.location.href = stripeUrl;

    } catch (err) {
      alert("Submission failed. Please try again.");
      console.error(err);
    }
  });
</script>
